{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "TODO application monorepo with React frontend and Hono backend",
  "packageManager": "bun@1.2.16",
  "private": true,
  "scripts": {
    "dev": "bun run --filter=\"*\" dev",
    "build": "bun run --filter=\"*\" build",
    "check": "biome check .",
    "check:write": "biome check --write --unsafe .",
    "format": "biome format .",
    "format:write": "biome format --write --unsafe .",
    "lint": "biome lint .",
    "lint:write": "biome lint --write --unsafe .",
    "typecheck": "bun run --filter=\"*\" typecheck",
    "test": "bun run --filter=\"*\" test",
    "backend:dev": "bun --cwd packages/backend run dev",
    "frontend:dev": "bun --cwd packages/frontend run dev",
    "backend:build": "bun --cwd packages/backend run build",
    "frontend:build": "bun --cwd packages/frontend run build",
    "docker:dev": "task dev",
    "docker:prod": "task prod",
    "docker:build": "task build",
    "docker:stop": "task stop",
    "docker:clean": "task clean",
    "docker:logs": "task logs",
    "docker:migrate": "task db:migrate",
    "setup": "task setup",
    "ci": "task ci"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/bun": "^1.2.17",
    "lefthook": "^1.11.14"
  },
  "trustedDependencies": [
    "es5-ext"
  ]
}
